        <Style x:Key="listboxitem" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Семестр" Padding="0" FontSize="14"/>
                                <TextBlock Text="{Binding Number}" Padding="0" Margin="3,0" FontSize="14"/>
                            </StackPanel>

                            <ListBox ItemsSource="{Binding Disciplines}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding TitleSubject}"/>
                                            <TextBlock Text="{Binding LectureHours}"/>
                                            <TextBlock Text="{Binding PracticeHours}"/>
                                            <TextBlock Text="{Binding TypeOfControl}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>
    

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Content="Добавить семестр" Style="{StaticResource Button}" Command="{Binding AddSemestrCommand}"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Semesters.Semesters}" ItemContainerStyle="{StaticResource listboxitem}" Margin="10,0"/>

        <Button Grid.Row="2" Content="Закончить настройку" Style="{StaticResource ButtonExit}" Command="{Binding CloseWindowCommand}"/>
