    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Личная информация" Style="{StaticResource MyStyleLabel}" Margin="10,10,0,0"/>

            <!--   БЛОК ПЕРСОНАЛЬНОЙ ИНФОРМАЦИИ   -->
            <StackPanel Grid.Row="1">
                <Label Content="Фамилия" Style="{StaticResource Label}"/>
                <TextBox Style="{StaticResource defaultTextBox}" Width="350" HorizontalAlignment="Left" Margin="10,0,0,0"
                         Text="{Binding Enrollee.SurName}" />

                <Label Content="Имя" Style="{StaticResource Label}"/>
                <TextBox Style="{StaticResource defaultTextBox}" Width="350" HorizontalAlignment="Left" Margin="10,0,0,0"
                         Text="{Binding Enrollee.Name}" />

                <Label Content="Отчество" Style="{StaticResource Label}"/>
                <TextBox Style="{StaticResource defaultTextBox}" Width="350" HorizontalAlignment="Left" Margin="10,0,0,0" 
                         Text="{Binding Enrollee.MiddleName}"/>

                <Label Content="Пол" Style="{StaticResource Label}"/>
                <ComboBox Style="{StaticResource ComboBoxGender}" ItemContainerStyle="{StaticResource ComboBoxItem}" 
                  SelectedItem="{Binding Enrollee.Gender, Converter={StaticResource ComboBoxItemToStringConvert}}" Margin="10,0,0,0">
                    <ComboBox.Items>
                        <ComboBoxItem Content="Муж"/>
                        <ComboBoxItem Content="Жен"/>
                    </ComboBox.Items>
                </ComboBox>

                <Label Content="Дата рождения" Style="{StaticResource Label}"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding Enrollee.DateOfBirth, StringFormat='dd.MM.yyyy', Converter={StaticResource DateTimeToStringFormatConvert}}" 
                             Style="{StaticResource DataTextBox}" Width="76" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                    <Label Content="Формат даты: 05.12.2000" Foreground="Gray"/>
                </StackPanel>

                <!--Блок гражданства-->
                <Grid Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <RadioButton Grid.Column="0" Grid.Row="0" IsChecked="True" VerticalAlignment="Center"/>
                    <Label Grid.Column="1" Grid.Row="0" Content="Гражданство" FontSize="15"/>

                    <TextBox Grid.Column="2" Grid.Row="0" 
                            Style="{StaticResource defaultTextBox}" Width="400" 
                            Text="{Binding Enrollee.Citizenship}" IsEnabled="{Binding .}"/>
                    <Label Grid.Column="3" Grid.Row="0" Content="Действует с:" Style="{StaticResource Label}"/>
                    <StackPanel Grid.Column="4" Grid.Row="0" Orientation="Horizontal">
                        <TextBox  Text="{Binding Enrollee.DateCitizenship, StringFormat='dd.MM.yyyy', Converter={StaticResource DateTimeToStringFormatConvert}}" 
                                  Style="{StaticResource DataTextBox}" Width="76" Margin="10,0,0,0" IsEnabled="{Binding .}"/>
                        <Label Content="Формат даты: 05.12.2000" Foreground="Gray" VerticalAlignment="Center"/>
                    </StackPanel>

                    <RadioButton Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"/>
                    <Label Grid.Column="1" Grid.Row="1" Content="Без гражданства" FontSize="15"/>
                </Grid>

            </StackPanel>

            <Line Grid.Row="2" Stroke="Gray" StrokeThickness="1" X1="0" Y1="0" Y2="0" Margin="40,10,40,0"
                  X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"/>

            <!--   БЛОК ДОКУМЕНТОВ   -->
            <Label Grid.Row="3" Content="Документы" Style="{StaticResource Label}" Margin="10,10,0,10" FontWeight="Bold"/>

            <Grid Grid.Row="4" Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Добавить документ:" Padding="0" FontSize="15"/>
                <Button Grid.Column="1" Content="Паспорт" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddDocumentCommand}" CommandParameter="Passport"/>
                <Button Grid.Column="2" Content="Снилс" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddDocumentCommand}" CommandParameter="Snils"/>
                <Button Grid.Column="3" Content="ИНН" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddDocumentCommand}" CommandParameter="INN"/>
                <Button Grid.Column="4" Content="Паспорт иностранного гражданина" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddDocumentCommand}" CommandParameter="ForeignPassport"/>
            </Grid>

            <ListBox x:Name="Documents" Grid.Row="5" ItemsSource="{Binding Enrollee.Documents}" ItemTemplateSelector="{StaticResource SelectorDocuments}"
                     ItemContainerStyle="{StaticResource ListBoxItemDocument}" Margin="10,0,10,0" Height="200"/>

            <Line Grid.Row="6" Stroke="Gray" StrokeThickness="1" X1="0" Y1="0" Y2="0" Margin="40,20,40,0"
                  X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"/>

            <!--   БЛОК ОБРАЗОВАНИЯ   -->
            <Label Grid.Row="7" Content="Образование" Style="{StaticResource Label}" Margin="10,10,0,10" FontWeight="Bold"/>

            <Grid Grid.Row="8" Margin="10,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label  Grid.Column="0" Content="Добавить образование:" Padding="0" FontSize="15"/>
                <Button Grid.Column="1" Content="9 класс" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddEducationCommand}" CommandParameter="Nine"/>
                <Button Grid.Column="2" Content="11 класс" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddEducationCommand}" CommandParameter="Eleven"/>
                <Button Grid.Column="3" Content="СПО" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddEducationCommand}" CommandParameter="SPO"/>
                <Button Grid.Column="4" Content="Бакалавриат" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddEducationCommand}" CommandParameter="Bak"/>
                <Button Grid.Column="5" Content="Магистратура" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddEducationCommand}" CommandParameter="Mag"/>
                <Button Grid.Column="6" Content="Аспирантура" Style="{StaticResource defaultButton}" 
                        Command="{Binding AddEducationCommand}" CommandParameter="Asp"/>

            </Grid>

            <ListBox x:Name="Educations" Grid.Row="9" ItemsSource="{Binding Enrollee.Educations}" ItemTemplateSelector="{StaticResource SelectorEducations}"
                     ItemContainerStyle="{StaticResource ListBoxItemEducation}" Margin="10,0,10,0" Height="200"/>

            <Line Grid.Row="10" Stroke="Gray" StrokeThickness="1" X1="0" Y1="0" Y2="0" Margin="40,20,40,10"
                  X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"/>

            <!--   БЛОК НАПРАВЛЕНИЯ ПОДГОТОВКИ   -->
            <Label Grid.Row="11" Content="Направление подготовки" Style="{StaticResource Label}" Margin="10,0,0,10" FontWeight="Bold"/>

            <Button Grid.Row="12" Content="Добавить направление подготовки" Style="{StaticResource defaultButton}" HorizontalAlignment="Left"
                    Command="{Binding AddDirectionCommand}"/>

            <ListBox x:Name="Directions" Grid.Row="13" Margin="10,0,10,0" Height="200" HorizontalContentAlignment="Stretch"
                     ItemsSource="{Binding Enrollee.Directions}" ItemContainerStyle="{StaticResource ListBoxItemDirection}"/>

            <Line Grid.Row="14" Stroke="Gray" StrokeThickness="1" X1="0" Y1="0" Y2="0" Margin="40,20,40,0"
                  X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}}"/>

            <!--   ДОБАВЛЕНИЕ АБИТУРИЕНТА   -->
            <Button Grid.Row="15" Content="Изменить данные" Style="{StaticResource OkButton}" HorizontalAlignment="Center"
                    Command="{Binding EditEnrolleeCommand}" CommandParameter="{Binding Enrollee}"/>
            
        </Grid>
    </ScrollViewer>

</UserControl>